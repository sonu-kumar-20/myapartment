<% layout("/layouts/boilerplate") %>

<% if (allListings.length === 0) { %>
  <div class="container text-center mt-5">
    <div class="alert alert-warning" role="alert">
      No listings found for "<%= search %>".
    </div>
    <a href="/listings" class="btn btn-primary">Back to all listings</a>
  </div>
<% } else { %>
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 row-cols-1 g-4">
    <% for (let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="listings-link text-decoration-none">
          <div class="card listing-card h-100">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem; object-fit: cover;">
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br>
                &#x20b9; <%= listing.price.toLocaleString('en-IN') %> / Month
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
<% } %>
